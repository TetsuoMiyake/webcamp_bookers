<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div class="error-box">
   <h2 class="error-title"><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
   <ul>
    <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
   </ul>
  </div>
<% end %>

<%= form_with model: @book, local:true do |f| %>
  <div class="field">
   <div class="field-label"><%= f.label :title %></div>
   <div class="field-box"><%= f.text_field :title %></div>
  </div>

  <div class="field">
   <div class="field-label"><%= f.label :body %></div>
   <div class="field-area"><%= f.text_area :body %></div>
  </div>
  <div class="btn"><%= f.submit 'Create Book' %></div>
<% end %>
<p><span><%= link_to "Show", books_path %></span> | <span><%= link_to "Back", books_path %></span></p>
