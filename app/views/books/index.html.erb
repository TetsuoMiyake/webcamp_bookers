<h1>Books</h1>
<% @books.each do |book| %>
 <p><%= book.title %></p>
 <p><%= book.body %></p>
<% end %>

<h2>New book</h2>
<%= form_with model: @book, local:true do |f| %>
  <h5>Title</h5>
  <%= f.text_field :title %>
  <h5>Body</h5>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>